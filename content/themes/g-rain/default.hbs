<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />
    <link rel="shortcut icon" href="/assets/images/favicon.png" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=0.77, user-scalable=no" />

    <link rel="stylesheet" type="text/css" href="/assets/css/production.css" />

    <link href='http://fonts.googleapis.com/css?family=Montserrat:700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Sans:400' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="/assets/fonts/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://yandex.st/highlightjs/7.4/styles/github.min.css">

    <!--[if IE]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">

    {{#if @blog.cover}}
    <!--<div style="overflow:hidden; left:10px; height:0; width:0;">-->
        <!--<img crossorigin="anonymous" id="site-bg-image" alt="background" src="{{@blog.cover}}">-->
    <!--</div>-->
    <div id="ccontainer" data-bg="{{#if @blog.cover}}{{@blog.cover}}{{/if}}">
        <!--<div id="cholder">-->
            <!--<canvas id="canvas"></canvas>-->
        <!--</div>-->
        <div id="choverbg"></div>
    </div>
    {{/if}}

    {{! Menu Navigation }}
    <div class="menu">
        {{#post}}
            <div class="written-by">written by</div>
            <h4 class="menu-title about-the-author">{{author.name}}</h4>
            <div class="menu-author-image" style="background-image: url('http://www.benjamincharity.com/i/portrait.jpg')"></div>
            <div class="menu-author-bio">
                {{author.bio}}
                â€“
                <br/>
                <a class="menu-author-web" href="{{author.website}}">{{author.website}}</a>
                <br />
                <a class="menu-author-web" href="http://github.com/benjamincharity">@benjamincharity</a>
                <!-- UNCOMMENT THIS IF YOU WANT TO SHOW YOUR E-MAIL AS WELL
                    <br/>
                    <a class="menu-author-mail" href="mailto:{{!author.email}}">{{!author.email}}</a>
                -->
            </div>
        {{/post}}
        <h4 class="menu-title table-of-contents">Table of Contents</h4>
        <ul class="clearfix">
            {{#foreach posts}}
            <li>
                <h3>
                    <a href="{{url}}">{{{title}}}</a>
                </h3>
                <div class="post-meta-date">{{{date}}}</div>
            </li>
            {{/foreach}}
        </ul>
    </div>

    {{! The fixed featured header on the homepage }}
    <header id="site-head">
        <div class="header-left">
            <div class="vertical">
               {{#if @blog.logo}}
                <a id="blog-logo" href="{{@blog.url}}">
                    <img src="{{@blog.logo}}" alt="Blog Logo" />
                </a>
               {{/if}}
            </div>
        </div>
        <div class="header-right">
            <div class="vertical">
                <div class="menu_button">
                    <i class="fa fa-align-justify"></i>
                </div>
            </div>
            <div class="vertical">
            </div>
        </div>
    </header>

    {{#if @blog.logo}}
        <a id="mobile-logo" href="{{@blog.url}}">
            <img src="{{@blog.logo}}" alt="Blog Logo" />
        </a>
   {{/if}}

    {{! Everything else gets inserted here }}
    {{{body}}}
    <div class="clear"></div>
    <div class="jqres"></div>

    {{! Ghost outputs important scripts and data with this tag }}
    {{! ghost_foot  :commented out to remove versioned jquery}}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script type="text/javascript" src="/assets/js/all.js"></script>
    <script src="http://yandex.st/highlightjs/7.4/highlight.min.js"></script>
    <script type="text/javascript" charset="utf-8">
      hljs.initHighlightingOnLoad();

      $('.article_container').readingTime({
          //readingTimeTarget: '.post-reading-time',
          wordCountTarget: '.post-word-count',
        });
    </script>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-12135040-8', 'benjamincharity.com');
      ga('send', 'pageview');

    </script>
</body>
</html>
